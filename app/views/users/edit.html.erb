<div class="container border border-info rounded mb-5" style="max-width: 400px;">
    <form action="/users/<%=@user.slug%>" method="post">
        <input type="hidden" name="_method" value="patch">
        
        <h3 class="text-center mb-4">Edit</h3>
        <div class="form-group">
            <input type="text" class="form-control" name="username" id="username" placeholder="Username" value="<%=@user.username%>" required>   
        </div>

        <div class="form-group">
            <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="<%=@user.email%>" required>   
        </div>

        <div class="form-group">
            <%if @user.profile_pic_link%>
            <input type="text" class="form-control" name="profilePicLink" id="profilePicLink" placeholder="Enter image link" value="<%=@user.profile_pic_link%>"> 
            <%else %>
            <input type="text" class="form-control" name="profilePicLink" id="profilePicLink" placeholder="Enter image link"> 
            <%end%>  
        </div>

        <div class="form-group">
            <label for="short_bio">Short Bio</label> <span class="text-muted">(Optional)</span>
            <textarea class="form-control" name="shortBio" id="short_bio" rows="3"></textarea>
            <small class="text-muted">Describe yourself with just a few words!</small>
        </div>

        <input class="btn btn-info btn-lg btn-block mb-2" type="submit" value="Edit">
    </form>
</div>
