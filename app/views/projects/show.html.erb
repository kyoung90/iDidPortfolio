<div class="container">
    <div class="card-deck">
        <div class="card mb-3">
            <a href="/projects/<%=@project.user.slug%>/<%=@project.slug%>"><img class="card-img-top" src="<%=@project.image_link0%>" alt="Image goes here"></a>
            <div class="card-body">
                <h5 class="card-title"><%=@project.title%></h5>
                <p class="card-text"><%=@project.description%></p>
                <p class="card-text">by: <a href="/users/<%=@project.user.slug%>"><%=@project.user.username%></a></p>
                <p class="card-text">views: <%=@project.view_count%></p>
            </div>
        </div>
    </div>
</div>

<% if current_user == @project.user%>
<a href="/projects/<%=@project.user.slug%>/<%=@project.slug%>/edit" class="btn btn-info">Edit</a>

<form action="/projects/<%=@project.user.slug%>/<%=@project.slug%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="btn btn-danger" type="submit" name="Delete" value="Delete">
</form>
<%end%>