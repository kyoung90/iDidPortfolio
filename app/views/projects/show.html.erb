<!-- Page Content -->
<div class="container">

  <!-- Portfolio Item Heading -->
  <h1 class="my-4"><%=@project.title%></h1>

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <img class="img-fluid" src="<%=@project.image_link0%>" alt="Image goes here">
    </div>

    <div class="col-md-4">
      <%if @project.description%>
      <h3 class="my-3">Project Description</h3>
      <p><%=@project.description%></p>
      <%end%>

      <%if @project.download_link%>
      <a href="<%=@project.download_link%>">Download Link</a>
      <%end%>

      <p>by: <a href="/users/<%=@project.user.slug%>"><%=@project.user.username%></a></p>
      <p>views: <%=@project.view_count%></p>
      <p>likes: <%=@project.likes.count%></p>
      <p>created at: <%=@project.created_at.strftime("%B, %e %Y")%></p>

      <% if current_user && @project.likes.detect{|like| like.user_id = current_user.id}%>
          <form action="/projects/<%=@project.slug%>/unlike" method="post">
            <button class="btn btn-info" type="submit">Unlike <i class="fas fa-thumbs-down"></i></button>
          </form>
      <% elsif current_user%>
          <form action="/projects/<%=@project.slug%>/like" method="post">
            <button class="btn btn-info" type="submit">Like <i class="fas fa-thumbs-up"></i></button>
          </form>     
      <%end%>

      <% if current_user == @project.user%>
      <br>
      <br>
      <div class="row">
          <div class="col-4 ">
            <a href="/projects/<%=@project.user.slug%>/<%=@project.slug%>/edit" class="btn btn-info">Edit</a>
          </div>

          <div class="ml-auto col-4">
            <form action="/projects/<%=@project.user.slug%>/<%=@project.slug%>" method="post">
                <input type="hidden" name="_method" value="delete">
                <button class="btn btn-danger btn-small" type="submit"><i class="fas fa-trash"></i></button>
            </form>
          </div>
      </div>
      <%end%>

    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <%# <h3 class="my-4">More Images</h3> %>

  <div class="row">

    <%if @project.image_link1%>
    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
            <img class="img-fluid" src="<%=@project.image_link1%>" alt="">
          </a>
    </div>
    <%end%>

    <%if @project.image_link2%>
    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
            <img class="img-fluid" src="<%=@project.image_link2%>" alt="">
          </a>
    </div>
    <%end%>

    <%if @project.image_link3%>
    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
            <img class="img-fluid" src="<%=@project.image_link3%>" alt="">
          </a>
    </div>
    <%end%>

    <%if @project.image_link4%>
    <div class="col-md-3 col-sm-6 mb-4">
      <a href="#">
            <img class="img-fluid" src="<%=@project.image_link4%>" alt="">
          </a>
    </div>
    <%end%>

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->


